---
import Banner from '../components/Banner.astro';
import Button from '../components/Button.astro';
import Copyright from '../components/Copyright.astro';
import Nav from '../components/Nav.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="pyon.moe">
    <div class="flex flex-col gap-2 text-lmn-slate container mx-auto items-center">
        <Nav curr_page={"home"} />

        <div class="flex flex-row gap-3">
            <img src="/images/main/logo.png" height="180" alt="pyon.moe logo" />
            <img class="hidden sm:block" src="/images/main/diamond.png" height="180" alt="301bio fire diamond" />
            <img class="hidden md:block" src="/images/main/hazard.png" height="180" alt="biohazard symbol" />
        </div>

        <div class="text-center text-base sm:text-lg">
            home of mel aise + bite lemons (updated&nbsp;07/19/2023)
        </div>

        <div class="w-full max-w-[600px]">
            <div class="flex flex-row mx-2">
                <Button text="twitch"  href="https://twitch.tv/bitelemons"    target="_blank"
                    class_ext="basis-1/2 text-center hover:text-white hover:bg-[#9146ff]"
                    />
                <Button text="twitter" href="https://twitter.com/_bitelemons" target="_blank"
                    class_ext="basis-1/2 text-center hover:text-white hover:bg-[#1da1f2]"
                    />
            </div>
        </div>

        <div class="grid grid-cols-3 sm:grid-cols-6 gap-1 grow-0">
            <Banner name="construction2" />
            <Banner name="chill_pill" />
            <Banner name="caramelldansen" />
            <Banner name="mind2" />

            <img src={"/images/banners/cat2.png"} width="88" alt="cat" />
            <Banner name="firefox" />
            <Banner name="homicide" />
            <Banner name="ostan" />

            <Banner name="anow" />
            <img src={"/images/banners/pdm_2.png"} width="88" alt="pyondotmoe" />
            <Banner name="tos" />
            <Banner name="donate" />
        </div>
        <Copyright />
    </div>
</Layout>