---
export interface ButtonInfo {
    deactivated?: boolean;
    class_ext?: string[];
    text: string;
    href: string;
    target?: string;
}

export interface Props {
    deactivated?: boolean;
    class_ext?: string[];
    text: string;
    href: string;
    target?: string;
};

const { deactivated = false, class_ext = [], text, href, target = "" } = Astro.props;

const class_list = 
    ["px-1.5 py-1 text-center",
        deactivated
        ?
        "font-bold bg-lmn-slate text-white pointer-events-none cursor-default"
        :
        "text-lmn-slate bg-white" ,
        ...class_ext
    ];
---

<a class:list={class_list} href={href} target={target}>
    {text}
</a>