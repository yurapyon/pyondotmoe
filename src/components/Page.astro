---
import Copyright from "./Copyright.astro";
import Nav, {Props as NavProps} from "./Nav.astro";

export interface Props {
    curr_page: NavProps["curr_page"];
}

const { curr_page } = Astro.props;
---

<div class="flex flex-col gap-4 text-lmn-slate container mx-auto items-center">
    <Nav curr_page={curr_page} />
    <slot />
    <Nav curr_page={curr_page} />
    <Copyright />
</div>