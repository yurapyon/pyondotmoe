---
import Link from "./Link.astro";

export interface Props {
    date: string;
    link: string;
    info?: string;
    imgs: string[];
};

const {date, link, info, imgs} = Astro.props;
---

<div class="bg-blue-white-shade drop-shadow-[4px_4px_#93999d40]">
    <div class="px-1.5 py-1">
        {date} <Link href={link}> link </Link> <br/>
        {info ? <>{info}<br/></> : ""}
    </div>
    {imgs.map((img: string) => {
        return <a href={"/works/" + img}>
            <img src={"/works/" + img} alt={img}/>
        </a>;
    })}
    <slot />
</div>
