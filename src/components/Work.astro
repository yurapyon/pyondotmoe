---
export interface Props {
    date: string;
    link: string;
    info?: string;
    imgs: string[];
};
const {date, link, info, imgs} = Astro.props;
---

<div class="m-10">
    {date} <a href={link}> link </a> <br/>
    {info ? <>{info}<br/></> : ""}
    {imgs.map((img: string) => {
        return <a href={img}>
            <img class="m-1" src={img} width="600"/>
        </a>;
    })}
    <slot />
</div>
